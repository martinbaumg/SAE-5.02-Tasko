---
const { desc } = Astro.props;
import type { TaskDone } from '../data/TasksDoneData.ts';
type Props = TaskDone;
---

<>
  {
    (
      <div id="doneTasks" class="space-y-4 mb-2">
        <a
          class="opacity-30 group flex w-full cursor-pointer flex-col justify-between gap-2 rounded-md border border-neutral-300 dark:border-neutral-700 p-4 transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400 md:flex-row md:items-center bg-neutral-200 dark:bg-neutral-800 bg"
          href="{link}"
          target="_blank"
          rel="noreferrer"
        >
          <div class="flex flex-col md:flex-row md:items-center">
            <div class="flex flex-col md:flex-row md:items-center mr-4">
              <input
                type="checkbox"
                class="mr-2 taskCheckbox"
                onclick="toggleTask('task1')"
                checked
              />
              <p class="text-white ml-2">{desc}</p>
            </div>
          </div>
        </a>
      </div>
    )
  }
</>
